  <body>
    <%= render "shared/nav" %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12">
          <%= flash_messages %>
          <%= yield %>

        </div> <!-- /layout-col -->
      </div> <!-- /layout-row -->
    </div> <!-- /container -->
