<h1>Pending Clients</h1>

<% if @hosts.empty? %>
  <h3>There are no clients waiting for configuration</h3>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>FQDN</th>
          <th>User</th>
          <th>Port</th>
          <th>Created At</th>
          <th>Approved By</th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: 'host', collection: @hosts %>
      </tbody>
    </table>
  </div>
<% end %>
