    <thead>
      <tr>
        <th>ClientId</th>
        <th>Name</th>
        <th>Uname</th>
        <th>Active Jobs</th>
        <th>Last Backup</th>
        <th>FileRetention (days)</th>
        <th>JobRetention (days)</th>
        <th>Space Used</th>
        <th>File count</th>
        <th>AutoPrune</th>
