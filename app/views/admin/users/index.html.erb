<h1>Users</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>id</th>
        <th>username</th>
        <th>email</th>
        <th>user type</th>
        <th>created at</th>
        <th>clients</th>
        <th>unverified hosts</th>
        <th>pending hosts</th>
        <th>actions</th>
      </tr>
    </thead>

    <tbody>
      <%= render partial: 'user', collection: @users %>
    </tbody>
  </table>
</div>
